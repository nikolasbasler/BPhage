#!/bin/bash -l
#SBATCH --job-name="amg_phold_v1_compare"
#SBATCH --cluster=genius
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=36
#SBATCH --mem-per-cpu=4G
#SBATCH --time=8:00:00
#SBATCH --account=lp_jm_virome_group
#SBATCH --output=slurm-%x_%j.out

###############################################################################

# Submit (from output/slurm_log)
# sbatch --export=ALL ../../scripts/HPC/amg_phold_v1_compare.slrm

conda activate phold_v1
repo_location="$VSC_STAGING/BPhage"
threads=36
# phold_db="/staging/leuven/stg_00029/DB/phold/phold_20240723"
phold_db="/staging/leuven/stg_00029/DB/phold/phold_20251018"

mkdir -p $VSC_SCRATCH/BPhage/amg_confirmation/phold_v1
cd $VSC_SCRATCH/BPhage/amg_confirmation/phold_v1

cut -f1 $repo_location/data/AMG_genomes.tsv | sed 1d | cut -d"_" -f1,2,7- > temp.amg_genome_ids.txt
python $repo_location/scripts/HPC/grep_gbk.py \
    $repo_location/output/annotation/pharokka_bphage_and_others/bphage_and_others.gbk \
    temp.amg_genome_ids.txt \
    temp.amg_genomes.gbk

mkdir temp_structures_of_amg_genomes
while read line; do
    echo "Copying structures for genome: $line"
    cp $repo_location/output/annotation/phold_colabfold_structures/basler_output_renamed/renamed_pdbs/${line}_*.pdb \
        temp_structures_of_amg_genomes/
done < temp.amg_genome_ids.txt

phold compare --keep_tmp_files --input temp.amg_genomes.gbk \
    --structures --structure_dir temp_structures_of_amg_genomes \
    -o phold_compare_amg_genomes -t $threads -d $phold_db --separate

# Get short names of AMG CDSs and filter down foldseek results
sed 1d $repo_location/data/AMG_CDSs.tsv | cut -f1 | cut -d"_" -f1,2,7- > temp.amg_cds_short_names.txt
grep -f temp.amg_cds_short_names.txt phold_compare_amg_genomes/foldseek_results.tsv \
    > temp.foldseek_results_amg_cds.tsv

# Undo the shortening of the contig names
echo "phold.gbk"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_amg_genomes/phold.gbk \
    > phold_compare_amg_genomes/phold_long_names.gbk
echo "phold_per_cds_predictions.tsv"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_amg_genomes/phold_per_cds_predictions.tsv \
    > phold_compare_amg_genomes/phold_per_cds_predictions_long_names.tsv
echo "phold_all_cds_functions.tsv"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_amg_genomes/phold_all_cds_functions.tsv \
    > phold_compare_amg_genomes/phold_all_cds_functions_long_names.tsv
echo "phold_aa.fasta"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_amg_genomes/phold_aa.fasta \
    > phold_compare_amg_genomes/phold_aa_long_names.fasta
echo "separate gbks"
mkdir -p phold_compare_amg_genomes/separate_gbks_long_names
while read pattern; do
    long=$(echo $pattern | cut -d"/" -f3)
    short=$(echo $pattern | cut -d"/" -f2)
    sed "s/$short/$long/g" phold_compare_amg_genomes/separate_gbks/${short}.gbk \
        > phold_compare_amg_genomes/separate_gbks_long_names/${long}.gbk
done < <(grep -f temp.amg_genome_ids.txt $repo_location/data/phold/relengthen.contig.names.sed)
echo "foldseek_results.tsv"
sed -f $repo_location/data/phold/relengthen.contig.names.sed temp.foldseek_results_amg_cds.tsv \
    > phold_compare_amg_genomes/foldseek_results_amg_cds_long_names.tsv

# Copy foldseek table to output location
gzip -c phold_compare_amg_genomes/foldseek_results_amg_cds_long_names.tsv \
    > $repo_location/output/amg_confirmation/phold_v1_foldseek_results_amg_cds_long_names.tsv.gz
gzip -c temp.foldseek_results_amg_cds.tsv \
    > $repo_location/output/amg_confirmation/phold_v1_foldseek_results_amg_cds.tsv.gz

cp -r phold_compare_amg_genomes $repo_location/output/amg_confirmation/phold_v1_compare_amg_genomes

# Clean up
rm -r temp*

echo "========================================================================"
duration=$SECONDS
printf 'Job finished in: %02d:%02d:%02d\n' $((duration/3600)) $((duration%3600/60)) $((duration%60))
