#!/bin/bash -l
#SBATCH --job-name="annotation_phold_compare"
#SBATCH --cluster=genius
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=36
#SBATCH --mem-per-cpu=4G
#SBATCH --time=6:00:00
#SBATCH --account=lp_jm_virome_group
#SBATCH --output=slurm-%x_%j.out

###############################################################################

# Submit (from output/slurm_log)
# sbatch --export=ALL ../../scripts/HPC/annotation_phold_compare.slrm

source /data/leuven/341/vsc34111/mambaforge/etc/profile.d/conda.sh
conda activate phold
repo_location="$VSC_STAGING/BPhage"
threads=36

mkdir -p $VSC_SCRATCH/BPhage/annotation/phold
cd $VSC_SCRATCH/BPhage/annotation/phold

phold compare --input $repo_location/output/annotation/pharokka_bphage_and_others/bphage_and_others.gbk \
    --structures --structure_dir $repo_location/output/annotation/phold_colabfold_structures/basler_output_renamed/renamed_pdbs/ \
    -o phold_compare_bphage_and_others -t $threads -d /staging/leuven/stg_00029/DB/phold/phold_20240723 --separate

# Undo the shortening of the contig names
echo "phold.gbk"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_bphage_and_others/phold.gbk \
    > phold_compare_bphage_and_others/phold_long_names.gbk
echo "phold_per_cds_predictions.tsv"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_bphage_and_others/phold_per_cds_predictions.tsv \
    > phold_compare_bphage_and_others/phold_per_cds_predictions_long_names.tsv
echo "phold_all_cds_functions.tsv"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_bphage_and_others/phold_all_cds_functions.tsv \
    > phold_compare_bphage_and_others/phold_all_cds_functions_long_names.tsv
echo "phold_aa.fasta"
sed -f $repo_location/data/phold/relengthen.contig.names.sed phold_compare_bphage_and_others/phold_aa.fasta \
    > phold_compare_bphage_and_others/phold_aa_long_names.fasta
echo "separate gbks"
mkdir -p phold_compare_bphage_and_others/separate_gbks_long_names
while read pattern; do
    long=$(echo $pattern | cut -d"/" -f3)
    short=$(echo $pattern | cut -d"/" -f2)
    sed "s/$short/$long/g" phold_compare_bphage_and_others/separate_gbks/${short}.gbk \
        > phold_compare_bphage_and_others/separate_gbks_long_names/${long}.gbk
done < $repo_location/data/phold/relengthen.contig.names.sed

cp -r phold_compare_bphage_and_others $repo_location/output/annotation

# phold plot --input phold_compare_bphage_and_others/phold.gbk -o plots_phold_compare_bphage_and_others

echo "========================================================================"
duration=$SECONDS
printf 'Job finished in: %02d:%02d:%02d\n' $((duration/3600)) $((duration%3600/60)) $((duration%60))
