    # mv temp.stats stats.other_studies.mean_depth.csv

    # Raw/dedup/trimmed reads
    sed 1d ${line}_read_stats.tsv >> stats.read.other_studies.reads.tsv

done < <(cut -f1 $repo_location/data/other_datasets_SRA_accessions.tsv)

# Clean up
rm temp.*

echo "========================================================================"
duration=$SECONDS
printf 'Job finished in: %02d:%02d:%02d\n' $((duration/3600)) $((duration%3600/60)) $((duration%60))
