cp temp.contig.list stats.other_studies.mapped_reads.csv
cp temp.contig.list stats.other_studies.horizontal_coverage.csv
cp temp.contig.list stats.other_studies.mean_depth.csv

echo -e "SRA\tRaw_pairs\tDedup_pairs\tTrimmed_pairs" > stats.read.other_studies.reads.tsv
while read line; do 
    echo $line

    # # Mapped reads
    # zcat ${line}.coverage.gz | cut -f1,4 | sed 1d | sort -k1,1 | sed 's/\t/,/g' | \
    #     sed "1s/^/contig,${line}\n/" | join --header -t "," stats.other_studies.mapped_reads.csv - > temp.stats
    # mv temp.stats stats.other_studies.mapped_reads.csv

    # # Horizontal coverage
    # zcat ${line}.coverage.gz | cut -f1,6 | sed 1d | sort -k1,1 | sed 's/\t/,/g' | \
    #     sed "1s/^/contig,${line}\n/" | join --header -t "," stats.other_studies.horizontal_coverage.csv - > temp.stats
    # mv temp.stats stats.other_studies.horizontal_coverage.csv

    # # Mean depth
    # zcat ${line}.coverage.gz | cut -f1,7 | sed 1d | sort -k1,1 | sed 's/\t/,/g' | \
