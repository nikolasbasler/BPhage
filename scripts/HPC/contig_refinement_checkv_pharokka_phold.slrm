#!/bin/bash -l
#SBATCH --job-name="contig_refinement_checkv_pharokka_phold"
#SBATCH --cluster=genius
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=36
#SBATCH --mem-per-cpu=4G
#SBATCH --time=30:00
#SBATCH --account=lp_jm_virome_group
#SBATCH --output=slurm-%x_%j.out

###############################################################################

# Submit (from output/slurm_log)
# sbatch --export=ALL ../../scripts/HPC/contig_refinement_checkv_pharokka_phold.slrm

repo_location="$VSC_STAGING/BPhage"
threads=36
pharokka_db="/staging/leuven/stg_00029/DB/pharokka/pharokka_1.4.0"
checkv_db="/staging/leuven/stg_00029/DB/CheckV/checkv-db-v1.5"
phold_db="/staging/leuven/stg_00029/DB/phold/phold_20240723"

conda activate viper_bphage
cd $VSC_SCRATCH/BPhage/contig_refinement/

################################################################################
##### CheckV
checkv end_to_end $repo_location/output/core_contig_refinement/extended_contigs.fasta \
    extended_contigs_checkv -d $checkv_db \
    --remove_tmp -t $threads
cut -f1,10 extended_contigs_checkv/quality_summary.tsv | sed 1d | \
    sed 's/_extended_partial//g' | sed 's/_extended_circular//g' | sort \
    > temp.extended.completeness
zcat $repo_location/output/bphage_ALL_1kb_checkv/quality_summary.tsv.gz | cut -f1,10 | \
    grep -f <(cut -f1 temp.extended.completeness) | sort > temp.original.completeness
sed 1d $repo_location/output/core_contig_refinement/cobra_refinement_stats.tsv | \
    grep -v "_self_circular" | sed 's/_extended_partial//g' | sed 's/_extended_circular//g' | sort > temp.stats

join temp.stats temp.original.completeness | sed 's/ /\t/g' > temp.join.1
join temp.join.1 temp.extended.completeness | sed 's/ /\t/g' > temp.join.2

echo -e "contig\toriginal_length\trefined_length\textended_bp\textended_percentage\toriginal_completeness\trefined_completeness" > extended_contigs_checkv/completeness_comparison.tsv
awk '{print $1 "\t" $3 "\t" $2 "\t" $4 "\t" $5 "\t" $6 "\t" $7}' temp.join.2 >> extended_contigs_checkv/completeness_comparison.tsv

# Copy CheckV output
cp -r extended_contigs_checkv $repo_location/output/core_contig_refinement

################################################################################
# Pharokka
# The IDs are too long for phold to handle. I rename them here already so the output is compatible with phold.
awk '/NODE/ {split($0, a, "_"); print a[1] "_" a[2] "_" a[7] "_" a[8] "_" a[9] "_" a[10] "_" a[11]; next} {print $1}' \
    $repo_location/output/core_contig_refinement/extended_contigs.fasta | sed 's/__//' \
    > temp.extended_contigs_shortened_names.fasta

conda activate pharokka
pharokka.py -i temp.extended_contigs_shortened_names.fasta -o extended_contigs_pharokka -d $pharokka_db \
    -t $threads -m -g prodigal-gv --meta_hmm -p extended_contigs

# Copy pharokka output
cp -r extended_contigs_pharokka $repo_location/output/core_contig_refinement

################################################################################
# Phold. Input is pharokka's gbk and George Bouras' colabfold structures
conda activate phold
phold compare --input $repo_location/output/core_contig_refinement/extended_contigs_pharokka/extended_contigs.gbk \
    --structures --structure_dir $repo_location/output/core_contig_refinement/colabfold_structures/extended_contigs_tophits/pdbs/ \
    -o extended_contigs_phold -t $threads -d $phold_db --separate

# Undo the shortening of the contig names
echo "phold.gbk"
sed -f $repo_location/data/phold/relengthen.core.contig.names.sed extended_contigs_phold/phold.gbk \
    > extended_contigs_phold/phold_long_names.gbk
echo "phold_per_cds_predictions.tsv"
sed -f $repo_location/data/phold/relengthen.core.contig.names.sed extended_contigs_phold/phold_per_cds_predictions.tsv \
    > extended_contigs_phold/phold_per_cds_predictions_long_names.tsv
echo "phold_all_cds_functions.tsv"
sed -f $repo_location/data/phold/relengthen.core.contig.names.sed extended_contigs_phold/phold_all_cds_functions.tsv \
    > extended_contigs_phold/phold_all_cds_functions_long_names.tsv
echo "phold_aa.fasta"
sed -f $repo_location/data/phold/relengthen.core.contig.names.sed extended_contigs_phold/phold_aa.fasta \
    > extended_contigs_phold/phold_aa_long_names.fasta
echo "vfdb"
sed -f $repo_location/data/phold/relengthen.contig.names.sed extended_contigs_phold/sub_db_tophits/vfdb_cds_predictions.tsv \
    > extended_contigs_phold/sub_db_tophits/vfdb_cds_predictions_long_names.tsv
echo "separate gbks"
mkdir -p extended_contigs_phold/separate_gbks_long_names
while read pattern; do
    long=$(echo $pattern | cut -d"/" -f3)
    short=$(echo $pattern | cut -d"/" -f2)
    sed "s/$short/$long/g" extended_contigs_phold/separate_gbks/${short}.gbk \
        > extended_contigs_phold/separate_gbks_long_names/${long}.gbk
done < $repo_location/data/phold/relengthen.core.contig.names.sed

# Phold plot
phold plot --input extended_contigs_phold/phold_long_names.gbk \
    -o extended_contigs_phold_plots

# Copy phold output
cp -r extended_contigs_phold $repo_location/output/core_contig_refinement
cp -r extended_contigs_phold_plots $repo_location/output/core_contig_refinement

################################################################################
# Clean up
rm temp.*

echo "========================================================================"
duration=$SECONDS
printf 'Job finished in: %02d:%02d:%02d\n' $((duration/3600)) $((duration%3600/60)) $((duration%60))
