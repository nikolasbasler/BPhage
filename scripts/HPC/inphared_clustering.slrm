#!/bin/bash -l
#SBATCH --job-name="inphared_clustering"
#SBATCH --cluster=genius
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=36
#SBATCH --mem-per-cpu=4G
#SBATCH --time=2:00:00
#SBATCH --account=lp_jm_virome_group
#SBATCH --output=slurm-%x_%j.out 

###############################################################################

# Submit (from output/slurm_log)
# sbatch --export=ALL ../../scripts/HPC/inphared_clustering.slrm

conda activate viper_bphage
repo_location="$VSC_STAGING/BPhage"

mkdir -p $VSC_SCRATCH/BPhage/inpha_clustering/
cd $VSC_SCRATCH/BPhage/inpha_clustering/

zcat $repo_location/output/bphage_ALL_1kb_phages.fasta.gz > bphage_and_inpha.fasta
zcat $repo_location/output/bphage_ALL_1kb_unclassified_viruses.fasta.gz >> bphage_and_inpha.fasta
zcat $repo_location/output/bphage_ALL_1kb_picobirna.fasta.gz >> bphage_and_inpha.fasta
zcat $VSC_SCRATCH/BPhage/additional_datasets/inphared_14Apr2025_genomes_excluding_refseq.fa.gz >> bphage_and_inpha.fasta
cat $VSC_SCRATCH/BPhage/additional_datasets/Bueren_dc525_rd3.fna >> bphage_and_inpha.fasta

viper_cluster_study.py -c bphage_and_inpha.fasta -t 36 -o bphage_and_inpha_clustered --min-identity 70 --min-coverage 85
mv bphage_and_inpha_clustered_clusters.tsv bphage_and_inpha_70-85_clusters.tsv
mv bphage_and_inpha_clustered.fasta bphage_and_inpha_clustered_70-85.fasta

mkdir -p $repo_location/output/inphared_clustering
cp *_clusters.tsv $repo_location/output/inphared_clustering

echo "========================================================================"
duration=$SECONDS
printf 'Job finished in: %02d:%02d:%02d\n' $((duration/3600)) $((duration%3600/60)) $((duration%60))
